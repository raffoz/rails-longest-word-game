<div class="container">
  <h1>New game</h1>
  <ul class="letter-card">
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
  </ul>

  <p class="form-prefix">What is the longest word you can find?</p>

  <form action="/score" method="POST" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <div class="input-group input-group-lg">
      <input type="text" name="word" class="form-control">
      <span class="input-group-btn">
        <input type="submit" value="Try!" class="btn btn-default">
      </span>
    </div>
  </form>

</div>
